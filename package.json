{
  "name": "defapi",
  "version": "0.1.0-alpha",
  "description": "Generate api definition files and docs",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "clean": "rm -rf lib",
    "tscheck": "tsc --noEmit",
    "watch": "rm -rf lib && tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "depl": "cross-env NODE_ENV=development npm uninstall -g defapi && npm run build && npm install -g",
    "prepublishOnly": "npm run build",
    "postbuild": "./dev/push-lib.sh"
  },
  "author": "Ikenna Agbasimalo <michfx@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.9",
    "@types/express-list-endpoints": "^4.0.1",
    "@types/fs-extra": "^9.0.6",
    "@types/inquirer": "^7.3.1",
    "@types/node": "^14.14.28",
    "@types/reflect-metadata": "^0.1.0",
    "@types/yargs": "^15.0.12",
    "express": "^4.17.1",
    "express-list-endpoints": "^5.0.0",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.4.6",
    "typescript": "^4.1.3",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1"
  },
  "bin": {
    "defapi": "lib/cli/index.js"
  },
  "keywords": [
    "defapi",
    "api",
    "api doc",
    "api documentation",
    "api definition"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ikmich/defapi"
  },
  "bugs": {
    "email": "michfx@gmail.com",
    "url": "https://github.com/ikmich/defapi/issues"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 2
  }
}
